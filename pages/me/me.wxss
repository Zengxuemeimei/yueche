.me-head {
  height: 346rpx;
  width: 100%;
  background: url(https://i.loli.net/2018/07/12/5b47392220817.png) no-repeat center center;
  background-size: 100% 346rpx;
  padding: 0 0 0 30rpx;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.mh-head {
  height: 210rpx;
  align-items: center;
  margin: 0;
}

.mhh-left {
}

.mhh-left image {
  width: 106rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  vertical-align: middle;
  height: 106rpx;
}

.mhh-left view.text {
  display: inline-block;
  color: #fff;
  font-size: 40rpx;
  vertical-align: middle;
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mhh-right {
  width: 166rpx;
  height: 64rpx;
}

.mhh-right image {
  width: 166rpx;
  height: 64rpx;
}

.mdl-text {
  font-size: 26rpx;
  color: #fff;
}

.mdl-icon {
  width: 100%;
  height: 60rpx;
}

.mdl-icon image {
  width: 46rpx;
  height: 46rpx;
}

.me-head-ul {
  padding: 0 30rpx 0 0;
  text-align: center;
}

.me-section {
  padding: 0 30rpx;
}

.me-s-title {
  font-size: 32rpx;
  color: #353535;
  margin: 30rpx 0;
}

.me-s-title  text {
  font-size: 20rpx;
