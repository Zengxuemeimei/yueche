/* pages/integral_mall/integral_mall.wxss */
.integral-head{
  width: 100%;
  height: 350rpx;
  background: url(https://i.loli.net/2018/07/14/5b497185d0f2f.jpg) no-repeat center center;
  background-size:  100% 100%;
  position: relative;
}
.integral-head-con{
  position: absolute;
  bottom: -2rpx;
  left: 80rpx;
  right: 80rpx;
   background:  url(https://i.loli.net/2018/07/14/5b4976155453e.png) no-repeat center bottom; 
  background-size: 100% 100%;
  padding: 55rpx 42rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
 
}
.ihc-bottom{
  font-size: 80rpx;
  color: #fff;

}
.ihc-bottom text{
  font-size: 20rpx;
}
.ihc-top-r {
  border: 1rpx solid #fff;
  line-height: 40rpx;
  border-radius: 22rpx;
  color: #fff;
  font-size: 22rpx;
  padding: 0 13rpx;
  vertical-align: middle;
}
.ihc-top-l image{
  width: 50rpx; 
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 15rpx;
}
.ihc-top-l text{
    color: #fff;
  font-size: 26rpx;
  vertical-align: middle;
}
.ihc-top-l  .nickname{
  display: inline-block;
   color: #fff;
  font-size: 26rpx;
  vertical-align: middle;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.integral-sect{
  padding: 30rpx;
}
.integral-sect-title{
  font-size: 34rpx;
  color: #333;
  font-weight: 700;
  margin: 30rpx 0;
}
.integral-sect-image {
  margin-top: 30rpx;
  position: relative;
  background: #fff;
}
.integral-sect-image image{
  width: 100%;
  height: 300rpx;
}
.integral-sect-rr {
  position: absolute;
  width: 240rpx;
  top: 50%;
  right: 0;
  /* margin-top: 50%; */
  transform: translate(0, -50%);
}
.integral-sect-rr .t{
font-size: 40rpx;
  color: #fff;
}
.integral-sect-rr .m{
  font-size: 22rpx;
  color: #fff;
  margin: 10rpx 0;
}
.integral-sect-rr .b{
  font-size: 50rpx;
  color: #fff;
}

.integral-sect-rr .b text{
  font-size: 40%;
}