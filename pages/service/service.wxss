  font-weight: 700;
}

.zshd-list {
  background: url(https://i.loli.net/2018/07/11/5b460104896ee.png) no-repeat center center;
  background-size: 220rpx 150rpx;
  width: 220rpx;
  height: 150rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 7rpx;
}

.zshd-list text {
  display: inline-block;
  font-size: 24rpx;
