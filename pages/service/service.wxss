}

.service-fix {
  position: relative;
  z-index: 99;
  margin: -90rpx 30rpx 20rpx 30rpx;
  padding: 34rpx;
  background: #fff;
  box-shadow: 0px 5rpx 20rpx #eee;
  border-radius: 8rpx;
}

.service-fix > .flex {
}

.service-fix .section {
  background: #fff;
}

.service-fix .picker {
  font-size: 34rpx;
  color: #353535;
  line-height: 55rpx;
}

.service-fix .picker text {
  display: inline-block;
  margin-right: 5rpx;
  width: 20rpx;
  height: 30rpx;
  background: url(https://i.loli.net/2018/07/11/5b4600046b3d3.png) no-repeat right center;
  background-size: 18rpx 10rpx;
}

.service-fix .ss-p {
  font-size: 26rpx;
  color: #888;
  background: #fff;
}

.ss-zxyy {
  text-align: center;
}

.ss-zxyy image {
  width: 54rpx;
  height: 52rpx;
}

.ss-zxyy  view {
